<script type="text/javascript">
jQuery(document).ready(function($) {
    jQuery('.am-tabs-narrow-switch').click(function(){
        jQuery('.am-tabs-narrow-stuff').toggle();
        jQuery('.am-tabs-narrow-wrapper').toggleClass('am-tabs-narrow-wrapper-open');
    });
    jQuery(window).scroll(function(){
        jQuery('.am-account-toolbar').
                toggleClass('am-account-toolbar-fixed',
                jQuery(window).scrollTop() > jQuery('.am-body-content-top').position().top);
    });
    jQuery(document).on('click', '.am-tabs-narrow-wrapper li.has-children > a', function(){
       jQuery(this).closest('.am-tabs-narrow-wrapper').find('li').removeClass('am-tab-opened');
       jQuery(this).closest('li').addClass('am-tab-opened');
       return false;
    });
    jQuery(document).on('click', '.am-tabs-narrow-wrapper li.has-children .am-tab-close', function(){
       jQuery(this).closest('li').removeClass('am-tab-opened');
       return false;
    });
    jQuery('.am-tabs-narrow-wrapper li.has-children ul').prepend('<div class="am-tab-close"></div>');
});
</script>
<div class="am-tabs-narrow-wrapper">
